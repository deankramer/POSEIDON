<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_weight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikel.poseidon.GetWeight">
    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="60dp"
        android:text="ENTER WEIGHT MANUALLY"
        android:textColor="@color/ToolbarTextColor"
        android:textStyle="bold"
        android:id="@+id/enter_manually"
        android:layout_alignBottom="@+id/editTextWeight"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:ems="7"
        android:hint="  Enter weight"
        android:layout_marginTop="153dp"
        android:id="@+id/editTextWeight"
        android:background="@drawable/enter_weight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok_button"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_marginTop="138dp"
        android:layout_below="@+id/enter_manually"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="7"
        android:hint="  Enter weight"
        android:id="@+id/editTextWeight_string"
        android:background="@drawable/enter_weight"
        android:layout_below="@+id/enter_manually"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Select Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datebtn"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_below="@+id/editTextWeight_string"
        android:layout_alignRight="@+id/ok_button"
        android:layout_alignEnd="@+id/ok_button"
        android:layout_marginTop="17dp" />
    <!--<TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="ENTER WIGHT AUTOMATICALLY"
        android:textColor="@color/ToolbarTextColor"
        android:textStyle="bold"
        android:id="@+id/enter_automatically"
        android:gravity="center"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/ok_button"
        android:layout_alignLeft="@+id/enter_manually"
        android:layout_alignStart="@+id/enter_manually" /> -->


</RelativeLayout>
