<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_steps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikel.poseidon.Steps">

    <include
        layout="@layout/toolbar"
        android:id="@+id/include" />

    <TextView
        android:text="Your steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:id="@+id/step_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="0"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/steps_counting"
        android:layout_marginTop="112dp"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="@color/ToolbarTextColor"
        android:layout_below="@+id/step_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/steps_counting"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView5" />

    <Button
        android:text=" Stop "
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/stop"
        android:textColor="@color/HeaderColor"
        android:background="@drawable/enter_weight_header"
        android:onClick="onStopService"
        android:layout_alignBottom="@+id/start"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_alignTop="@+id/start" />

    <Button
        android:text=" Start "
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/start"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:onClick="onStartService"
        android:gravity="center"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />
</RelativeLayout>
