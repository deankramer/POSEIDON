<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_steps"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mikel.poseidon.Steps">

    <include
        layout="@layout/toolbar"
        android:id="@+id/include" />

    <TextView
        android:text="     Your Steps"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/remindersHead"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:weightSum="2"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout8">

        <Button
            android:text=" Start "
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/start"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/enter_weight_header"
            android:textColor="@color/HeaderColor"
            android:onClick="onStartService"
            android:gravity="center"
          />

        <Button
            android:text=" Stop "
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/stop"
            android:textColor="@color/HeaderColor"
            android:background="@drawable/enter_weight_header"
            android:onClick="onStopService"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="70dp" />

    </LinearLayout>

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_chr"
        android:textSize="50sp"
        android:textColor="@color/ToolbarTextColor"
        android:layout_above="@+id/linearLayout9"
        android:layout_alignRight="@+id/linearLayout8"
        android:layout_alignEnd="@+id/linearLayout8"
        android:layout_marginBottom="51dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="82dp"
        android:id="@+id/linearLayout9"
        android:layout_above="@+id/linearLayout8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp">
        <TextView
            android:text="0"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/steps_counting"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/ToolbarTextColor"/>
        <TextView
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/calories"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/ToolbarTextColor"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <TextView
        android:text="Steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="51dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/tv_chr"
        android:layout_alignLeft="@+id/tv_chr"
        android:layout_alignStart="@+id/tv_chr" />

    <TextView
        android:text="Calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"

        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/linearLayout8"
        android:layout_alignEnd="@+id/linearLayout8" />


</RelativeLayout>
