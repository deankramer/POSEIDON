<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mikel.poseidon.UserProfile">

    <include
        layout="@layout/toolbar"
        android:id="@+id/include" />

    <TextView
        android:text="      Your Profile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:background="@color/ToolbarTextColor"
        android:textColor="@color/HeaderColor"
        android:textStyle="bold"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <TextView
            android:text=""
            android:hint="25"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/profile_age"
            android:layout_weight="1.03"
            android:textStyle="normal|bold"
            android:background="@drawable/enter_weight"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="62dp"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:text=""
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="175"
            android:background="@drawable/enter_weight"
            android:id="@+id/profile_height"
            android:layout_weight="1.03"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
            />

        <TextView
            android:text=""
            android:hint="Male"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/enter_weight"
            android:id="@+id/profile_gender"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
            />
        <EditText
            android:text=""
            android:hint="70"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/profile_weight"
            android:inputType="numberDecimal"
            android:layout_weight="1"
            android:background="@drawable/enter_weight"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/include"
        android:layout_toRightOf="@+id/linearLayout3"
        android:layout_toEndOf="@+id/linearLayout3"
        android:layout_marginTop="19dp">

        <TextView
            android:text="years"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/years"
            android:layout_weight="1.03"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_marginTop="62dp"/>

        <TextView
            android:text="cm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/cm"
            android:layout_weight="1.03"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
            />

        <TextView
            android:text=""
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
            />
        <TextView
            android:text="Kg"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/weight"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/linearLayout4"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_toStartOf="@+id/linearLayout3">


        <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView10"
            android:layout_weight="1.03"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@color/ToolbarTextColor"
            android:layout_marginTop="62dp"
            />

        <TextView
        android:text="Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/textView12"
        android:layout_weight="1.03"
        android:textSize="18sp"
            android:gravity="center"
        android:textStyle="normal|bold"
        android:textColor="@color/ToolbarTextColor"
            android:layout_marginTop="62dp"
       />

    <TextView
            android:text="Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView11"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="normal|bold"
            android:textColor="@color/ToolbarTextColor"
            android:textSize="18sp"
        android:layout_marginTop="62dp"
  />

    <TextView
            android:text="Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:textColor="@color/ToolbarTextColor"
            android:textSize="18sp"
            android:layout_marginTop="62dp"
   />

    </LinearLayout>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:background="@drawable/enter_weight_header"
        android:textColor="@color/HeaderColor"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />

    <!--<TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/save"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/textView15" />
        -->


</RelativeLayout>
