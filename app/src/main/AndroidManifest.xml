<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mikel.poseidon">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:label="POSEIDON"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:label">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.mikel.poseidon.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".GetWeight" />
        <activity android:name=".ViewSummary" />
        <activity android:name=".Preferences" />
        <activity android:name=".Graph" />
        <activity android:name=".Steps" />
        <activity android:name=".StepsRecord" />
        <activity android:name=".PreferencesList" />
        <activity
            android:name=".SetGraphLimits"
            android:label="@string/title_activity_set_graph_limits"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">

            <intent-filter>
                <action android:name="com.mikel.poseidon.SetGraphLimits" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DeleteData">
            <intent-filter>
                <action android:name="com.mikel.poseidon.DeleteData" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name=".StepService" />
        <service android:name=".WeightNotifService" />

        <receiver android:name=".WeightNotifBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>



    </application>

</manifest>